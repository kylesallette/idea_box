<div class="form">
    <div class="wrapper">
      <%= form_for [@user, @idea] do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Idea Title*" %><br><br>

        <%= f.label :content %>
        <%= f.text_area :content, placeholder: "Idea*" %><br><br>
  <%= f.submit class: "sub-btn" %>
<% end %>
